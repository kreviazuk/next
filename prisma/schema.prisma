generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  verified  Boolean  @default(false)  // 添加邮箱验证状态
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]   // 一个用户可以有多篇文章
}

model Post {
  id       Int      @id @default(autoincrement())
  title    String
  author   User     @relation(fields: [authorId], references: [id])
  authorId Int
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  type      String   // 验证类型：register/reset-password
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)

  @@index([email, type])
} 