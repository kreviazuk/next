generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id              String   @id @default(cuid())
  title           String
  author          String
  isbn            String   @unique
  category        String
  description     String?
  publisher       String
  publishDate     DateTime
  price           Float
  totalCopies     Int
  availableCopies Int
  status          String   @default("可借")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  type      String   // 验证类型：register/reset-password
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)

  @@index([email, type])
}

model Reader {
  id        String   @id @default(cuid())
  name      String
  gender    String
  age       Int
  phone     String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([name])
  @@index([phone])
} 